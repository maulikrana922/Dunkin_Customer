<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:layout_weight="0.50"
                android:background="@drawable/point_bg"
                android:orientation="vertical">

                <com.dunkin.customer.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/point_bg"
                    android:gravity="center"
                    android:padding="@dimen/spacing_medium"
                    android:text="@string/lbl_total_point"
                    android:textColor="@android:color/white"
                    app:fontName="dd_bold.ttf" />

                <com.dunkin.customer.widget.CustomTextView
                    android:id="@+id/txtMyPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/spacing_medium"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:fontName="dd_light.ttf" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_medium"
                android:layout_weight="0.50"
                android:background="@drawable/point_bg"
                android:orientation="vertical">

                <com.dunkin.customer.widget.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/point_bg"
                    android:gravity="center"
                    android:padding="@dimen/spacing_medium"
                    android:text="@string/lbl_used_point"
                    android:textColor="@android:color/white"
                    app:fontName="dd_bold.ttf" />

                <com.dunkin.customer.widget.CustomTextView
                    android:id="@+id/txtUsedPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/spacing_medium"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:fontName="dd_light.ttf" />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressLoad"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminateDrawable="@drawable/progress_circle"
        android:progressDrawable="@drawable/progress_circle"
        android:visibility="visible" />

    <ListView
        android:id="@+id/lvLoadList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/list_divider_dialog"
        android:dividerHeight="2dp"
        android:scrollbars="none" />

    <com.dunkin.customer.widget.CustomTextView
        android:id="@+id/emptyElement"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/no_data_error"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:visibility="gone"
        app:fontName="dd_bold.ttf" />
</LinearLayout>