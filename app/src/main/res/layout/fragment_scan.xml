<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.dunkin.customer.widget.CustomTextView3
        android:id="@+id/txtScan"
        app:fontName="dd_bold.ttf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/scan_win"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@color/tab_indicator"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/price_desc_font">
    </LinearLayout>

    <com.dunkin.customer.widget.CustomTextView3
        android:id="@+id/txtPlay"
        app:fontName="dd_bold.ttf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/play_win"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@color/colorPrimaryDark"/>
</LinearLayout>