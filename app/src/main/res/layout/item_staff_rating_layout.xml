<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ratingLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_medium"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_medium"
        android:layout_marginRight="@dimen/spacing_medium"
        android:orientation="horizontal">

        <com.dunkin.customer.widget.CustomTextView
            android:id="@+id/tvQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_weight="1"
            android:gravity="start|left"
            android:textColor="@color/colorPrimary"
            app:fontName="dd_bold.ttf" />

        <com.dunkin.customer.widget.CustomTextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:textColor="@color/colorPrimary"
            app:fontName="dd_bold.ttf" />

    </LinearLayout>

    <com.dunkin.customer.customSeekBar.CustomSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bar_color="@color/gift_layout_color"
        app:bar_height="2dp"
        app:bar_highlight_color="@color/colorPrimary"
        app:max_value="20"
        app:min_value="0"
        app:thumb_color="@color/drawer_selected"
        app:thumb_color_pressed="@color/drawer_selected"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"/>
</LinearLayout>



