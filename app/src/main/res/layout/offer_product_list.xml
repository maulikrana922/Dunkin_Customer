<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/spacing_medium"
        android:orientation="vertical">

        <com.dunkin.customer.widget.CustomTextView
            android:id="@+id/txtProductPayOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:fontName="dd_bold.otf" />

        <com.dunkin.customer.widget.CustomTextView
            android:id="@+id/txtProductPurchaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:fontName="dd_bold.otf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/llLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:background="@color/colorPrimary"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/spacing_xsmall"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgLogo"
                    android:gravity="center">

                    <com.dunkin.customer.widget.CustomTextView
                        android:id="@+id/tvOfferPrice1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/spacing_medium"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:gravity="center"
                        app:fontName="dd_bold.otf" />

                    <com.dunkin.customer.widget.CustomTextView
                        android:id="@+id/tvOfferPoint1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvOfferPrice1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/spacing_medium"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        android:gravity="center"
                        app:fontName="dd_bold.otf" />

                    <LinearLayout
                        android:id="@+id/llRemainingRedeem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvOfferPoint1"
                        android:layout_marginLeft="@dimen/spacing_medium"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.dunkin.customer.widget.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_remaining_times_redeem3"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:fontName="dd_bold.otf" />

                        <com.dunkin.customer.widget.CustomTextView
                            android:id="@+id/txtProductRemainingTimeRedeem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            app:fontName="dd_bold.otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llRemainingRedeem"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.dunkin.customer.widget.CustomTextView
                            android:id="@+id/offerProductBuy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:textColor="@color/home_welcome_text"
                            app:fontName="dd_bold.otf" />

                        <com.dunkin.customer.widget.CustomTextView
                            android:id="@+id/offerProductname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:textColor="@color/colorPrimary"
                            app:fontName="dd_bold.otf" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/viewSeperator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/spacing_xsmall"
                android:background="@color/list_divider_dialog" />

            <RelativeLayout
                android:id="@+id/llRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgLogof"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:background="@color/colorPrimary"
                    android:contentDescription="@string/app_name"
                    android:padding="@dimen/spacing_xsmall"
                    android:scaleType="centerCrop" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgLogof"
                    android:gravity="center">

                    <com.dunkin.customer.widget.CustomTextView
                        android:id="@+id/tvOfferPrice2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/spacing_medium"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:gravity="center"
                        app:fontName="dd_bold.otf" />

                    <com.dunkin.customer.widget.CustomTextView
                        android:id="@+id/tvOfferPoint2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvOfferPrice2"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/spacing_medium"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        android:gravity="center"
                        app:fontName="dd_bold.otf" />

                    <LinearLayout
                        android:id="@+id/llAvailedProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvOfferPoint2"
                        android:layout_marginLeft="@dimen/spacing_medium"
                        android:layout_marginStart="@dimen/spacing_medium"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.dunkin.customer.widget.CustomTextView
                            android:id="@+id/txtLabelAvailedProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_availed_product_not"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:fontName="dd_bold.otf"
                            android:visibility="gone"/>

                        <com.dunkin.customer.widget.CustomTextView
                            android:id="@+id/txtAvailedProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            app:fontName="dd_bold.otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/llAvailedProduct"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.dunkin.customer.widget.CustomTextView
                            android:id="@+id/offerProductfree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:textColor="@color/home_welcome_text"
                            app:fontName="dd_bold.otf" />

                        <com.dunkin.customer.widget.CustomTextView
                            android:id="@+id/offerProductfname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|top"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:textColor="@color/colorPrimary"
                            app:fontName="dd_bold.otf" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>