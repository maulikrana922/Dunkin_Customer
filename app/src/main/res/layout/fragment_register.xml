                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/spacing_xlarge"
                        android:src="@drawable/lock_ic" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ed_textbox_height"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:background="@drawable/textbox_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_user"
                            android:scaleType="fitXY" />

                        <com.dunkin.customer.widget.CustomEditText
                            android:id="@+id/edFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ed_textbox_height"
                            android:background="@drawable/fill"
                            android:gravity="center_vertical"
                            android:hint="@string/hint_first_name"
                            android:inputType="textPersonName"
                            android:paddingEnd="@dimen/spacing_large"
                            android:paddingLeft="@dimen/spacing_large"
                            android:paddingRight="@dimen/spacing_large"
                            android:paddingStart="@dimen/spacing_large"
                            android:textColor="@color/textbox_font"
                            android:textColorHint="@color/textbox_font"
                            app:fontName="dd_light.ttf" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ed_textbox_height"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        android:background="@drawable/textbox_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_user"
                            android:scaleType="fitXY" />

                        <com.dunkin.customer.widget.CustomEditText
                            android:id="@+id/edLastName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ed_textbox_height"
                            android:background="@drawable/fill"
                            android:gravity="center_vertical"
                            android:hint="@string/hint_last_name"
                            android:inputType="textPersonName"
                            android:paddingEnd="@dimen/spacing_large"
                            android:paddingLeft="@dimen/spacing_large"
                            android:paddingRight="@dimen/spacing_large"
                            android:paddingStart="@dimen/spacing_large"
                            android:textColor="@color/textbox_font"
                            android:textColorHint="@color/textbox_font"
                            app:fontName="dd_light.ttf" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ed_textbox_height"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        android:background="@drawable/textbox_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_dob"
                            android:scaleType="fitXY" />

                        <com.dunkin.customer.widget.CustomTextView
                            android:id="@+id/edDateOfBirth"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ed_textbox_height"
                            android:background="@drawable/fill"
                            android:gravity="center_vertical"
                            android:hint="@string/hint_date_of_birth"
                            android:paddingEnd="@dimen/spacing_large"
                            android:paddingLeft="@dimen/spacing_large"
                            android:paddingRight="@dimen/spacing_large"
                            android:paddingStart="@dimen/spacing_large"
                            android:textColor="@color/textbox_font"
                            android:textColorHint="@color/textbox_font"
                            app:fontName="dd_light.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ed_textbox_height"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        android:background="@drawable/textbox_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_user"
                            android:scaleType="fitXY" />

                        <com.dunkin.customer.widget.CustomEditText
                            android:id="@+id/edEmail"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ed_textbox_height"
                            android:background="@drawable/fill"
                            android:gravity="center_vertical"
                            android:hint="@string/hint_email"
                            android:inputType="textWebEmailAddress"
                            android:paddingEnd="@dimen/spacing_large"
                            android:paddingLeft="@dimen/spacing_large"
                            android:paddingRight="@dimen/spacing_large"
                            android:paddingStart="@dimen/spacing_large"
                            android:textColor="@color/textbox_font"
                            android:textColorHint="@color/textbox_font"
                            app:fontName="dd_light.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ed_textbox_height"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        android:background="@drawable/textbox_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_pwd"
                            android:scaleType="fitXY" />

                        <com.dunkin.customer.widget.CustomEditText
                            android:id="@+id/edPassword"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ed_textbox_height"
                            android:background="@drawable/fill"
                            android:gravity="center_vertical"
                            android:hint="@string/hint_password"
                            android:inputType="textPassword"
                            android:paddingEnd="@dimen/spacing_large"
                            android:paddingLeft="@dimen/spacing_large"
                            android:paddingRight="@dimen/spacing_large"
                            android:paddingStart="@dimen/spacing_large"
                            android:textColor="@color/textbox_font"
                            android:textColorHint="@color/textbox_font"
                            app:fontName="dd_light.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ed_textbox_height"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        android:background="@drawable/textbox_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_pwd"
                            android:scaleType="fitXY" />

                        <com.dunkin.customer.widget.CustomEditText
                            android:id="@+id/edConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ed_textbox_height"
                            android:background="@drawable/fill"
                            android:gravity="center_vertical"
                            android:hint="@string/hint_confirm_password"
                            android:inputType="textPassword"
                            android:paddingEnd="@dimen/spacing_large"
                            android:paddingLeft="@dimen/spacing_large"
                            android:paddingRight="@dimen/spacing_large"
                            android:paddingStart="@dimen/spacing_large"
                            android:textColor="@color/textbox_font"
                            android:textColorHint="@color/textbox_font"
                            app:fontName="dd_light.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ed_textbox_height"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        android:background="@drawable/textbox_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_phone"
                            android:scaleType="fitXY" />

                        <com.dunkin.customer.widget.CustomEditText
                            android:id="@+id/edPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ed_textbox_height"
                            android:background="@drawable/fill"
                            android:hint="@string/hint_phone_number"
                            android:inputType="phone"
                            android:maxLength="15"
                            android:paddingEnd="@dimen/spacing_large"
                            android:paddingLeft="@dimen/spacing_large"
                            android:paddingRight="@dimen/spacing_large"
                            android:paddingStart="@dimen/spacing_large"
                            android:textColor="@color/textbox_font"
                            android:textColorHint="@color/textbox_font"
                            app:fontName="dd_light.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/ed_textbox_height"
                        android:layout_marginTop="@dimen/spacing_xsmall"
                        android:background="@drawable/textbox_bg"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_address"
                            android:scaleType="fitXY" />

                        <com.dunkin.customer.widget.CustomEditText
                            android:id="@+id/edAddress"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/ed_textbox_height"
                            android:background="@drawable/fill"
                            android:hint="@string/hint_address"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingEnd="@dimen/spacing_large"
                            android:paddingLeft="@dimen/spacing_large"
                            android:paddingRight="@dimen/spacing_large"
                            android:paddingStart="@dimen/spacing_large"
                            android:textColor="@color/textbox_font"
                            android:textColorHint="@color/textbox_font"
                            app:fontName="dd_light.ttf" />
                    </LinearLayout>

