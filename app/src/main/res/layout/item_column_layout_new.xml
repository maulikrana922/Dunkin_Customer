<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dataLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_with_shadow"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llNoteId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/lblNoteId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_xsmall"
                android:text="@string/str_note_id"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:fontName="dd_bold.ttf" />

            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/tvNoteId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_xsmall"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:fontName="dd_light.ttf"
                tools:text="@string/str_note_id" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/lblAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_xsmall"
                android:text="@string/str_note_amount"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:fontName="dd_bold.ttf" />

            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/tvNoteAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_xsmall"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:fontName="dd_light.ttf"
                tools:text="@string/str_note_amount" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llNoteId"
            android:orientation="horizontal">

            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/lblAmountAdded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_xsmall"
                android:text="@string/str_note_amount_added_on"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:fontName="dd_bold.ttf" />

            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_xsmall"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:fontName="dd_light.ttf"
                tools:text="@string/str_note_amount_added_on" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llDateTime"
            android:orientation="horizontal">

            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/lblPerformedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_xsmall"
                android:text="@string/str_note_recharge_by"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:fontName="dd_bold.ttf" />

            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/tvRechargeBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_xsmall"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:fontName="dd_light.ttf"
                tools:text="@string/str_note_recharge_by" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>


