<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/llLoginSignUp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_small"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_pop"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dd_logo" />


            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_btn"
                android:gravity="center"
                android:text="@string/login"
                android:textAllCaps="true"
                android:textColor="@color/textbox_font"
                android:textSize="40dp"
                android:textStyle="bold"
                app:fontName="dd_bold.otf" />

            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/txtSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/btn_signup"
                android:textAllCaps="true"
                android:textColor="@color/textbox_font_pink_new"
                android:textSize="40dp"
                android:textStyle="bold"
                app:fontName="dd_bold.otf" />

            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/txtFBLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/facebook_reg"
                android:gravity="center"
                android:text="@string/btn_fb_signup"
                android:textAllCaps="false"
                android:textColor="@color/textbox_font"
                android:textSize="40dp"
                android:textStyle="bold"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium"
                android:paddingLeft="@dimen/fifteen_dp"
                android:paddingStart="@dimen/fifteen_dp"
                android:paddingRight="@dimen/fifteen_dp"
                android:paddingEnd="@dimen/fifteen_dp"
                app:fontName="dd_bold.otf" />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
               />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

