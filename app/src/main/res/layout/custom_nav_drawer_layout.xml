<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_bar_height"
    android:layout_centerInParent="true"
    android:background="@drawable/drawer_item_bg"
    android:padding="@dimen/spacing_xsmall">

    <ImageView
        android:id="@+id/imgNavIcon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_nav_home" />

    <com.dunkin.customer.widget.CustomTextView
        android:id="@+id/txtNavTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_toEndOf="@+id/imgNavIcon"
        android:layout_toRightOf="@+id/imgNavIcon"
        android:padding="@dimen/spacing_medium"
        android:textColor="@android:color/white"
        app:fontName="dd_bold.ttf" />

</RelativeLayout>