<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium">

    <LinearLayout
        android:id="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <com.dunkin.customer.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|left"
            android:textColor="@color/colorPrimary"
            android:text="Winner : "
            app:fontName="dd_light.ttf" />

        <com.dunkin.customer.widget.CustomTextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|left"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:fontName="dd_bold.ttf" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <com.dunkin.customer.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|left"
            android:textColor="@color/colorPrimary"
            android:text="Token # : "
            app:fontName="dd_light.ttf" />

        <com.dunkin.customer.widget.CustomTextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|left"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:fontName="dd_bold.ttf" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <com.dunkin.customer.widget.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|left"
            android:textColor="@color/colorPrimary"
            android:text="Date of Purchase : "
            app:fontName="dd_light.ttf" />

        <com.dunkin.customer.widget.CustomTextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_calc_news"
            android:drawablePadding="@dimen/spacing_medium"
            android:drawableStart="@drawable/ic_calc_news"
            android:gravity="start|left"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/home_welcome_text"
            app:fontName="dd_light.ttf" />

    </LinearLayout>

</LinearLayout>