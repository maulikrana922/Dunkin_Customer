<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/spacing_medium"
    android:background="@android:color/white"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_xlarge"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_profile_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ed_textbox_height"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@drawable/textbox_border_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ed_textbox_height"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@drawable/ic_profile_user_icon"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <com.dunkin.customer.widget.CustomEditText
                android:id="@+id/edFirstName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/hint_first_name"
                android:inputType="textPersonName"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingStart="@dimen/spacing_medium"
                android:textColor="@color/profile_font"
                android:textColorHint="@color/profile_font"
                app:fontName="dd_light.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ed_textbox_height"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:background="@drawable/textbox_border_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ed_textbox_height"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@drawable/ic_profile_user_icon"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <com.dunkin.customer.widget.CustomEditText
                android:id="@+id/edLastName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/hint_last_name"
                android:inputType="textPersonName"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingStart="@dimen/spacing_medium"
                android:textColor="@color/profile_font"
                android:textColorHint="@color/profile_font"
                app:fontName="dd_light.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ed_textbox_height"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:background="@drawable/textbox_border_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ed_textbox_height"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@drawable/ic_dob_icon"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/edDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/hint_date_of_birth"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingStart="@dimen/spacing_medium"
                android:textColor="@color/profile_font"
                android:textColorHint="@color/profile_font"
                app:fontName="dd_light.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ed_textbox_height"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:background="@drawable/textbox_border_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ed_textbox_height"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@drawable/ic_ed_email_icon"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <com.dunkin.customer.widget.CustomEditText
                android:id="@+id/edEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@android:color/transparent"
                android:editable="false"
                android:gravity="center_vertical"
                android:hint="@string/hint_email"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingStart="@dimen/spacing_medium"
                android:textColor="@color/profile_font"
                android:textColorHint="@color/profile_font"
                app:fontName="dd_light.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ed_textbox_height"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:background="@drawable/textbox_border_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ed_textbox_height"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@drawable/ic_profile_password_icon"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <com.dunkin.customer.widget.CustomEditText
                android:id="@+id/edPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingStart="@dimen/spacing_medium"
                android:textColor="@color/profile_font"
                android:textColorHint="@color/profile_font"
                app:fontName="dd_light.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ed_textbox_height"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:background="@drawable/textbox_border_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ed_textbox_height"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@drawable/ic_profile_password_icon"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <com.dunkin.customer.widget.CustomEditText
                android:id="@+id/edConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/hint_confirm_password"
                android:inputType="textPassword"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingStart="@dimen/spacing_medium"
                android:textColor="@color/profile_font"
                android:textColorHint="@color/profile_font"
                app:fontName="dd_light.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ed_textbox_height"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:background="@drawable/textbox_border_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ed_textbox_height"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@drawable/ic_pn_icon"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <com.dunkin.customer.widget.CustomEditText
                android:id="@+id/edPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:hint="@string/hint_phone_number"
                android:inputType="phone"
                android:maxLength="15"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingStart="@dimen/spacing_medium"
                android:textColor="@color/profile_font"
                android:textColorHint="@color/profile_font"
                app:fontName="dd_light.ttf" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:background="@drawable/textbox_border_bg"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textbox_border_bg">

                <ImageView
                    android:layout_width="@dimen/ed_textbox_height"
                    android:layout_height="@dimen/ed_textbox_height"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_profile_address_icon" />
            </RelativeLayout>

            <com.dunkin.customer.widget.CustomEditText
                android:id="@+id/edAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/linear1"
                android:layout_toRightOf="@+id/linear1"
                android:background="@drawable/textbox_bg"
                android:gravity="center_vertical"
                android:hint="@string/hint_address"
                android:minHeight="@dimen/ed_textbox_height"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingStart="@dimen/spacing_medium"
                android:textColor="@color/profile_font"
                android:textColorHint="@color/profile_font"
                app:fontName="dd_light.ttf" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llAddress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ed_textbox_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:button="@drawable/custom_checkbox_bg" />

            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:button="@drawable/custom_checkbox_bg"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingStart="@dimen/spacing_medium"
                android:text="@string/lbl_shipping_address_same"
                android:textColor="@color/profile_font"
                android:textSize="14sp"
                app:fontName="dd_light.ttf" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:background="@drawable/textbox_border_bg"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textbox_border_bg">

                <ImageView
                    android:layout_width="@dimen/ed_textbox_height"
                    android:layout_height="@dimen/ed_textbox_height"
                    android:layout_alignParentTop="true"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_profile_address_icon" />
            </RelativeLayout>

            <com.dunkin.customer.widget.CustomEditText
                android:id="@+id/edShippingAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/linear2"
                android:layout_toRightOf="@+id/linear2"
                android:background="@drawable/textbox_bg"
                android:gravity="center_vertical"
                android:hint="@string/hint_shipping_address"
                android:minHeight="@dimen/ed_textbox_height"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingStart="@dimen/spacing_medium"
                android:textColor="@color/profile_font"
                android:textColorHint="@color/profile_font"
                app:fontName="dd_light.ttf" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ed_textbox_height"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:background="@drawable/textbox_border_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ed_textbox_height"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@drawable/ic_profile_country"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/spSelectCountry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:inputType="none"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingStart="@dimen/spacing_medium"
                android:text="@string/txt_select_country"
                android:textColor="@color/profile_font"
                android:textColorHint="@color/profile_font"
                app:fontName="dd_light.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ed_textbox_height"
            android:layout_marginTop="@dimen/spacing_xsmall"
            android:background="@drawable/textbox_border_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/ed_textbox_height"
                android:layout_height="@dimen/ed_textbox_height"
                android:background="@drawable/ic_profile_restaurant"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <com.dunkin.customer.widget.CustomTextView
                android:id="@+id/spSetFavoriteRestaurant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:inputType="none"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingEnd="@dimen/spacing_medium"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:paddingStart="@dimen/spacing_medium"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/txt_set_fav_restaurant"
                android:textColor="@color/profile_font"
                android:textColorHint="@color/profile_font"
                app:fontName="dd_light.ttf" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
